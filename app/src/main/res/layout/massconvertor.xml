<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".massConvertor">

    <TextView
        android:id="@+id/title1"
        android:layout_width="400dp"
        android:layout_height="76dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/mass_conversion"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="398dp"
        android:layout_height="589dp"
        android:layout_marginTop="56dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/title1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:text="Gram"
                android:textColor="@color/black"
                android:textSize="28sp"/>

            <EditText
                android:id="@+id/gram"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:hint="Gram"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:text="Centigrams"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/centi"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:hint="centigram"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:text="Hectogram"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/hectogram"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:hint="hectogram"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:text="Decagram"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/decagram"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:hint="decagram"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColorHint="#757575" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:text="Milligram"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/milegram"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:hint="Milligram"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColorHint="#757575" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:text="Pounds"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/pounds"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_gravity="center_horizontal"
                android:hint="Pounds"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:text="Kilogram"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/kgram"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:hint="Kilogram"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textAlignment="center" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/backToConversionTools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/white"
        android:text="@string/back"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clearAllMass"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp" />

    <Button
        android:id="@+id/clearAllMass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Clear All"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/massFinder"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/massFinder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Find Now"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/scrollView4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp" />
</androidx.constraintlayout.widget.ConstraintLayout>